{
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "./contentScript.css"
      ],
      "js": [
        "./contentScript.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "description": "Perform customizable actions (Search, Copy etc) on selected text.",
  "icons": {
    "16": "assets/icons/icon_48.png",
    "128": "assets/icons/icon_128.png"
  },
  "manifest_version": 2,
  "name": "Selection Popup",
  "options_ui": {
    "page": "options.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "tabs"
  ],
  "version": "1.9.7"
}
