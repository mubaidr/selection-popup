{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "globals": {
    "Vue": true,
    "chrome": true,
    "document": true,
    "window": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["html"],
  "rules": {
    "linebreak-style": "off",
    "no-console": "off",
    "no-extraneous-dependencies": "off",
    "no-underscore-dangle": "off",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "asyncArrow": "never",
        "named": "always"
      }
    ]
  }
}
