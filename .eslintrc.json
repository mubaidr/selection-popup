{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended"
  ],
  "globals": {
    "Vue": true,
    "chrome": true,
    "document": true,
    "window": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "prettier"
  ],
  "rules": {
    "no-console": "off",
    "prettier/prettier": "error"
  }
}
